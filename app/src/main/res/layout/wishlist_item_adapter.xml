<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linear_layout_background"
    android:padding="15dp">


    <ImageView
        android:id="@+id/ivWish"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:background="@drawable/image_view_background"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/travellers" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/ivWish"
        android:gravity="center"
        android:paddingStart="10dp">

        <CheckBox
            android:id="@+id/cbWish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wishlist_item"
            android:checked="false"
            android:clickable="true"
            android:fontFamily="serif"
            android:paddingStart="30dp"
            android:text="上海迪士尼"
            android:textColor="@color/activity_bg"
            android:textSize="17dp" />
    </LinearLayout>

</RelativeLayout>